      <PasswordField fx:id="setPasswordField" layoutX="115.0" layoutY="377.0" prefHeight="25.0" prefWidth="374.0" promptText="Enter your password" />
      <Label layoutX="10.0" layoutY="436.0" prefHeight="17.0" prefWidth="105.0" text="Confirm Password" />
      <PasswordField fx:id="confirmPasswordField" layoutX="115.0" layoutY="432.0" prefHeight="25.0" prefWidth="374.0" promptText="Confirm password" />
      <CheckBox fx:id="eventOrganizerCheckbox" layoutX="128.0" layoutY="130.0" mnemonicParsing="false" text="Event Organizer">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="basicUserCheckBox" layoutX="326.0" layoutY="130.0" mnemonicParsing="false" text="Basic User">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </CheckBox>
      <Button fx:id="registerButton" layoutX="116.0" layoutY="484.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="374.0" style="-fx-background-color: #000000;" text="Register" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="closeButton" layoutX="117.0" layoutY="530.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="374.0" style="-fx-background-color: #000000;" text="Close" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
