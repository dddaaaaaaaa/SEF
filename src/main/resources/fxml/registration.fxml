<AnchorPane prefHeight="591.0" prefWidth="553.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.register.RegisterController">
   <children>
      <AnchorPane layoutY="-1.0" prefHeight="122.0" prefWidth="575.0" style="-fx-background-color: #000000;">
         <children>
            <ImageView fx:id="registerImageView" fitHeight="135.0" fitWidth="121.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/register.png" />
               </image>
            </ImageView>
            <Label layoutX="135.0" layoutY="50.0" text="User Registration" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="36.0" layoutY="173.0" text="FirstName" />
      <TextField fx:id="firstNameTextField" layoutX="117.0" layoutY="169.0" prefHeight="25.0" prefWidth="374.0" promptText="Enter your first name" />
      <Label layoutX="39.0" layoutY="233.0" prefHeight="17.0" prefWidth="64.0" text="LastName" />
      <TextField fx:id="secondNameTextField" layoutX="117.0" layoutY="229.0" prefHeight="25.0" prefWidth="374.0" promptText="Enter your second name" />
      <Label layoutX="44.0" layoutY="277.0" prefHeight="17.0" prefWidth="54.0" text="Email" />
      <TextField fx:id="emailTextField" layoutX="117.0" layoutY="273.0" prefHeight="25.0" prefWidth="374.0" promptText="Email Address" />
      <Label layoutX="36.0" layoutY="326.0" prefHeight="17.0" prefWidth="54.0" text="Username" />
      <TextField fx:id="usernameTextField" layoutX="117.0" layoutY="322.0" prefHeight="25.0" prefWidth="374.0" promptText="Choose an username" />
